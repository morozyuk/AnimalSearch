@model IList<AnimalSearch.Models.Animal>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/scripts/jquery-3.3.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

<div id="results">
    <h1 class="title">Animal Search</h1>
    <h3 class="actionName">Search</h3>

    @using (Ajax.BeginForm("Search", "Home", new AjaxOptions
    {
        UpdateTargetId = "results",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "divLoading",
        HttpMethod = "Get"
    }))
    {
        @Html.TextBox("searchString")<input type="submit" class="buttonSearch" />
        <div id="divLoading" style="color: red; width: 200px; background-color: yellow;  display: none; position: absolute;">
            Loading ....
        </div>
    }
    <div class="tableContainer">
        <table class="databaseContent" id="myTableId">
            <thead>
                <tr>
                    <th><p>Animal name</p></th>
                    <th><p>Kind</p></th>
                    <th><p>Breed</p></th>
                    <th><p>Description</p></th>
                    <th><p>Adress</p></th>
                    <th><p>Image</p></th>
                    <th><p>Actions</p></th>
                </tr>
            </thead>
            <tbody id="tbl-animals">
                <tr style="display:none;">

                </tr>

            </tbody>
        </table>
    </div>
    <div class="actionButtons">
        <form action="/Home/Create">
            <button class="Otherbutton">Add new animal</button>
        </form>
        <button id="ajaxcheck" class="Otherbutton">search with a polygon</button>
    </div>
    <div id="googleMap"></div>

</div>
<script src="~/Scripts/MapMain.js"></script>
<script src='http://maps.googleapis.com/maps/api/js?v=3&sensor=false&amp;libraries=places&key=AIzaSyAhnsDNCjvjyK3f_ctrPVdXoheSq2cckmQ&callback=myMap'></script>



