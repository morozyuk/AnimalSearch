@model  AnimalSearch.Models.Animal
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/scripts/jquery-3.3.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
<h2 class="editCreateTitle">Create</h2>
@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
<fieldset class="editCreate">
    @Html.LabelFor(model => model.Name, "name :")
    <br />
    @Html.EditorFor(model => model.Name)
    <br /><br />
    @Html.LabelFor(model => model.Kind, "Enter animal kind : ")
    <br />
    @Html.EditorFor(model => model.Kind)
    <br /><br />
    @Html.LabelFor(model => model.Breed, "Enter animal breed : ")
    <br />
    @Html.EditorFor(model => model.Breed)
    <br /><br />
    @Html.LabelFor(model => model.Description, "Enter some description : ")
    <br />
    @Html.EditorFor(model => model.Description)
    <br /><br />
    @Html.LabelFor(model => model.Adress, "Enter last address :")
    <br />
    @Html.EditorFor(model => model.Adress,
                    new { htmlAttributes = new { @id = "address" } })
    <br /><br />
    <p><input type="file" name="uploadImage" id="edit" /></p>

    <p><input type="submit" value="Send" class="editCreatebutton" /></p>
</fieldset>
}
<div id="googleMap" style="width:100%;height:400px;"></div>
<script src="~/Scripts/ForCreateEdit.js"></script>

